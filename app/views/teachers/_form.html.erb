<%= simple_form_for @teacher, :html=>{:class=>'form-horizontal'} do |f| %>

  <% if @teacher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

      <ul>
      <% @teacher.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row">
      <div class="col-xs-6 col-md-6">
        <%= f.input :name, :label=>"姓名", :autofocus=>true, :input_html=>{:class=>"form-control", :placeholder=>"姓名",:required=>true} %><br>
      </div>
      <div class="col-xs-6 col-md-6">
        <%= f.input :email, :label=>"電子郵件", :input_html=>{:class=>"form-control", :placeholder=>"電子郵件信箱",:required=>false},:type=>"email" %><br>
      </div>
    </div>


    <div class="row">
      <div class="col-xs-6 col-md-6">
        <%= f.input :subject1, :label=>"任教科目1", :input_html=>{:class=>"form-control", :placeholder=>"任教科目1",:required=>true} %><br>
      </div>
      <div class="col-xs-6 col-md-6">
        <%= f.input :subject2, :label=>"任教科目2", :input_html=>{:class=>"form-control", :placeholder=>"任教科目2",:required=>false} %><br>
      </div>
    </div>


  <div class="actions">
    <%= f.button :submit, "儲存教師資料" ,:class=>"btn btn-primary"  %>
  </div>
<% end %>
