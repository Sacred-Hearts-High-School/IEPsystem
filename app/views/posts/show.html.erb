<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
     <h3 class="panel-title"><%= @post.title %></h3>
  </div>
  <div class="panel-body">
  <%= @post.content.html_safe %>
  </div>
  <div class="panel-footer">
  <%= @post.user.name %>
  <%= @post.updated_at %>
  <br>
  標籤：<%= @post.taxonomies %>
  </div>

</div>

