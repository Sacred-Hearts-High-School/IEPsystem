<p id="notice"><%= notice %></p>

<p>
  <strong>標題</strong>
  <%= @post.title %>
</p>

<p>
<strong>內文：</strong><br>
  <%= @post.content.html_safe %>
</p>

<p>
  <strong>張貼者</strong>
  <%= @post.user.name if @post.user_id %>
</p>

<p>
  <strong>標籤:</strong>
  <%= @post.taxonomies %>
</p>


<p>
  <strong>權限：</strong>
  <%= @post.permission %>
</p>

<%= link_to '編輯', edit_admin_post_path(@post.id), :class=>"btn btn-primary" %> |
<%= link_to '返回', admin_posts_path , :class=>"btn btn-primary" %>
