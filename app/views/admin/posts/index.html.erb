<h1>最新消息</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>標題</th>
      <th>張貼人</th>
      <th>編修時間</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.name %></td>
        <td><%= post.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= link_to '查看', admin_post_path(post.id) %></td>
        <td><%= link_to '編輯', edit_admin_post_path(post.id) %></td>
        <td><%= link_to '刪除', admin_post_path(post.id), method: :delete, data: { confirm: "您確定要刪除此篇貼文？"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新增一篇文章', new_admin_post_path, :class=>"btn btn-default" %>

